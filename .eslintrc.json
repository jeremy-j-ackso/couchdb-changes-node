{
    "extends": "airbnb-base",
    "env": {
      "node": true
    },
    "parserOptions": {
      "ecmaVersion": 6,
      "sourceType": "module"
    },
    "rules": {
      "no-use-before-define": "off",
      "semi": "off",
      "no-console": "off",
      "no-loop-func": "off",
      "no-shadow": "off",
      "consistent-return": "off"
    }
}
